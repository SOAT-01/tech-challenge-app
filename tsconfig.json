{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "rootDirs": ["src"],
        "baseUrl": "src",
        "paths": {
            "@gateways/*": ["gateways/*"],
            "@interfaces/*": ["interfaces/*"],
            "@valueObjects/*": ["valueObjects/*"],
            "@useCases/*": ["useCases/*"],
            "@external/*": ["external/*"],
            "@config/*": ["config/*"],
            "@entities/*": ["entities/*"],
            "@controllers/*": ["controllers/*"],
            "@api/*": ["api/*"],
            "@utils/*": ["adapter/driver/api/utils/*"],
            "@types/*": ["types/*"]
        }
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules/**/*"]
}

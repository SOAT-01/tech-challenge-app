{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "rootDirs": ["src"],
        "baseUrl": "src",
        "paths": {},
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules/**/*"]
}

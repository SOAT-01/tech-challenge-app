{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "./build",
        "allowSyntheticDefaultImports": true,
        "rootDirs": ["src"],
        "baseUrl": "src",
        "paths": {
            "@domain/*": ["core/domain/*"],
            "@useCases/*": ["core/application/useCases/*"],
            "@config/*": ["config/*"],
            "@infra/*": ["adapter/driven/infra/*"],

            "@controllers/*": ["adapter/driver/api/controllers/*"],
            "@routes/*": ["adapter/driver/api/routes/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
